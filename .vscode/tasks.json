{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-linux",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${input:sourceFile}",
        "-o",
        "${input:programNameLinux}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "gcc"
      ]
    },
    {
      "label": "build-windows",
      "type": "shell",
      "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
      "args": [
        "${input:sourceFile}",
        "-o",
        "${input:programNameWindows}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "gcc"
      ]
    }
  ],
  "inputs": [
    {
      "id": "sourceFile",
      "type": "promptString",
      "description": "Enter the source file (e.g., practice/hello.c)"
    },
    {
      "id": "programNameLinux",
      "type": "promptString",
      "description": "Enter output filename (e.g., practice/hello)"
    },
    {
      "id": "programNameWindows",
      "type": "promptString",
      "description": "Enter output filename (e.g., practice\\hello)"
    }
  ]
}
