{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C/C++ on Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${input:programNameLinux}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-linux"
    },
    {
      "name": "Debug C/C++ on Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\${input:programNameWindows}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "build-windows"
    }
  ],
  "inputs": [
    {
      "id": "programNameLinux",
      "type": "promptString",
      "description": "Enter the output filename (e.g., a.out or path/to/output)"
    },
    {
      "id": "programNameWindows",
      "type": "promptString",
      "description": "Enter the output filename (e.g., a.exe or path\\to\\output.exe)"
    }
  ]
}
